@using Application.Catalogs.CatalohItems.CatalogItemServices;
@model List<CatalogBrandDto>
@{
    Layout = null;
    var BRANSID = Context.Request.Query["brandId"];

}

<div class="item-box item-box-color">
    <div class="title">
        <div class="d-flex align-items-center justify-content-between">
            <h6 class="font-14">فیلتر براساس برند</h6>
            <a class="btn border-0" data-bs-toggle="collapse" href="#collapseItemBoxColor"
               role="button" aria-expanded="false">
                <i class="bi bi-chevron-down"></i>
            </a>
        </div>
    </div>
    <div class="desc collapse show" id="collapseItemBoxColor">
        <div class="filter-item-content">
            <form asp-action="Index" method="get">
                @foreach (var item in Model)
                {
                    var isChecked = BRANSID.ToList().Any(p => p == item.Id.ToString());
                    <div class="d-flex align-items-center justify-content-between flex-wrap mb-3">
                        <div class="form-check">
                            <label for="brandCheck@item.Id" class="form-check-label">@item.Brand</label>
                            <input type="checkbox" name="brandId" id="brandCheck@item.Id" class="form-check-input" value="@item.Id" @(isChecked ? "checked" : "") onclick="submit();">
                        </div>
                       
                    </div>
                }

                @foreach (var queryString in Context.Request.Query.Where(p => p.Key != "brandId").ToList())
                {
                    <input type="hidden" name="@queryString.Key" value="@queryString.Value" />
                }
            </form>
        </div>
    </div>
</div>
