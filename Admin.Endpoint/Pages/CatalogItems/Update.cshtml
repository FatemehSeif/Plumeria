@page "{id:int}"
@model Admin.Endpoint.Pages.CatalogItems.UpdateModel // Replace with your model

@{
    ViewData["Title"] = "ویرایش کالا";
}

<h1>@ViewData["Title"]</h1>

<form method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
   

    <div class="form-group">
        <label asp-for="Data.Name" class="control-label"></label>
        <input asp-for="Data.Name" class="form-control" />
        <span asp-validation-for="Data.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Data.Description" class="control-label"></label>
        <textarea asp-for="Data.Description" class="form-control"></textarea>
        <span asp-validation-for="Data.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Data.Price" class="control-label"></label>
        <input asp-for="Data.Price" class="form-control" />
        <span asp-validation-for="Data.Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Data.AvailableStock" class="control-label"></label>
        <input asp-for="Data.AvailableStock" class="form-control" />
        <span asp-validation-for="Data.AvailableStock" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Data.RestockThreshold" class="control-label"></label>
        <input asp-for="Data.RestockThreshold" class="form-control" />
        <span asp-validation-for="Data.RestockThreshold" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Data.MaxStockThreshold" class="control-label"></label>
        <input asp-for="Data.MaxStockThreshold" class="form-control" />
        <span asp-validation-for="Data.MaxStockThreshold" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Data.CatalogTypeId" class="control-label"></label>
        <select asp-for="Data.CatalogTypeId" asp-items="@Model.Categories" class="form-control"></select>
        <span asp-validation-for="Data.CatalogTypeId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Data.CatalogBrandId" class="control-label"></label>
        <select asp-for="Data.CatalogBrandId" asp-items="@Model.Brands" class="form-control"></select>
        <span asp-validation-for="Data.CatalogBrandId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="upload-images" class="control-label">انتخاب تصویر</label>
        <input type="file" id="upload-images" name="Files" multiple accept="image/*" />
        <span asp-validation-for="Files" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">ویرایش</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

