@page "{id:int}"
@model Admin.Endpoint.Pages.CatalogItems.DeleteModel
@{

}
@{
    ViewData["Title"] = "حذف کالا";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>آیا مطمئن هستید که می خواهید این کالا را حذف کنید؟</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Data.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Data.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Data.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Data.Description)
        </dd>
    </dl>

    <form method="post">

        <button type="submit" class="btn btn-danger">حذف</button>
        <a asp-page="./Index" class="btn btn-secondary">بازگشت</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
